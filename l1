using System;

class Star
{
    public static int number { get; private set; } = 0;
    public const double pi = Math.PI;
    public int width = 0;
    public int height = 0;
    readonly uint ID;


    static Star()
    {
        Console.WriteLine("Статический конструктор");
    }

    public Star()
    {
        number++;
        Console.WriteLine("Конструктор по умолчанию");
        ID = (uint)GetHashCode();
    }

    public Star(int width, int height)
    {
        number++;
        Console.WriteLine("Конструктор с параметром");

        this.width = width;
        this.height = height;
        ID = (uint)GetHashCode();
    }

    public Star(ref Star ex)
    {
        number++;
        Console.WriteLine("Конструктор копирования");

        this.width = ex.width;
        this.height = ex.height;
        ID = (uint)GetHashCode();
    }


    public static void Info(ref Star obj)
    {
        Console.WriteLine("width: " + obj.width);
        Console.WriteLine("height: " + obj.height);
        Console.WriteLine("ID: " + obj.ID);
    }

    public override int GetHashCode()
    {
        return (height + width*1000);
    }

    public override bool Equals(object obj)
    {
        if (obj == null)
        {
            return false;
        }


        Star R = obj as Star;

        if ((Object)R == null)
        {
            return false;
        }

        return (height==R.height && width==R.width);
    }
}


static class MathObject
{
    public static double Area(ref Star R)
    {

        return R.width * R.height;
    }

    public static bool Box(ref Star R, int boxWidth, int boxHeight) {


        return (R.width <= boxWidth && R.height <= boxHeight);
    }
}



namespace l1
{
    class Program
    {
        static void Main(string[] args)
        {
            var R1 = new Star(10, 15);
            Star.Info(ref R1);
            Star R2 = new Star(20, 25);
            Star.Info(ref R2);
            Console.WriteLine("Влезет в коробку: "+ MathObject.Box(ref R1, 2, 3)+"\n");

            Console.WriteLine(Star.number);


            var s = new { width = 22, height = 13 };
            Console.WriteLine(s.width);

            Console.Read();

        }
    }
}
